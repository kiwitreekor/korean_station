		spritelayout_ground()
		ifelse($1, PLT_TYPE_NONE, {}, {platform_base(PLT_TYPE_A, $1, SHADOW_TRUE)})
		spritelayout_gangneung_road()
		regular(spr_gangneung_fence, xyz(16,0,8), dxdydz(0,16,6))
		glass(spr_gangneung_fence_glass, xyoff(0,0))
	})
	xtile({
		spritelayout_ground()
		ifelse($1, PLT_TYPE_NONE, {}, {platform_base(PLT_TYPE_B, $1, SHADOW_TRUE)})
		spritelayout_gangneung_road()
		regular(spr_gangneung_fence, xyz(16,0,8), dxdydz(0,16,6))
		glass(spr_gangneung_fence_glass, xyoff(0,0))
	})
	xtile({
		spritelayout_ground()
		ifelse($1, PLT_TYPE_NONE, {}, {platform_base(PLT_TYPE_A, $1, SHADOW_TRUE)})
		spritelayout_gangneung_road()
		regular(spr_ground_road_concrete+4, xyz(0,16,8), dxdydz(16,16,0), TTD, aslflags({OFFSET_SPRITE}), registers({REGISTER_NONE}))
		regular(spr_gangneung_fence, xyz(16,0,8), dxdydz(0,16,6))
		glass(spr_gangneung_fence_glass, xyoff(0,0))
	})
	xtile({
		spritelayout_ground()
		ifelse($1, PLT_TYPE_NONE, {}, {platform_base(PLT_TYPE_A, $1, SHADOW_TRUE)})
		spritelayout_gangneung_road()
		_regular(spr_ground_road_concrete+3, xyz(0,16,8), dxdydz(16,16,0), TTD, aslflags({OFFSET_SPRITE}), registers({REGISTER_NONE}))
		regular(spr_gangneung_fence, xyz(16,0,8), dxdydz(0,16,6))
		glass(spr_gangneung_fence_glass, xyoff(0,0))
	})
	
	xtile(tile_gangneung_purchase, {
		spritelayout_ground_nontrack_concrete()
		regular(spr_gangneung_purchase, xyz(0,0,0), dxdydz(16,16,40))
	})
})

